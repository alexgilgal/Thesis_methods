	author = {Touceda-Suárez, María and Kita, Elizabeth M and Acemel, Rafael D and Firbas, Panos N and Magri, Marta S and Naranjo, Silvia and Tena, Juan J and Gómez-Skarmeta, Jose Luis and Maeso, Ignacio and Irimia, Manuel},
