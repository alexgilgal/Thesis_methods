	author = {Tena, Juan J. and González-Aguilera, Cristina and Fernández-Miñán, Ana and Vázquez-Marín, Javier and Parra-Acero, Helena and Cross, Joe W. and Rigby, Peter W.J. and Carvajal, Jaime J. and Wittbrodt, Joachim and Ǵomez-Skarmeta, José L. and Martínez-Morales, Juan R.},
