	keywords = {Acclimatization, Adaptation, Physiological, Animals, Climate Change, Ecosystem, Environmental Exposure, Epigenesis, Genetic, Humans, Plant Physiological Phenomena, Plants, Stress, Physiological, Time Factors, environmental stress, evolution, plasticity, trangenerational effects},
	pages = {5--22},
}

@article{fox_beyond_2019,
	title = {Beyond buying time: the role of plasticity in phenotypic adaptation to rapid environmental change},
	volume = {374},
	issn = {0962-8436},
