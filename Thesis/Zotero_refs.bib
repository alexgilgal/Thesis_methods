	author = {Williams, Ruth M. and Candido-Ferreira, Ivan and Repapi, Emmanouela and Gavriouchkina, Daria and Senanayake, Upeka and Ling, Irving T.C. and Telenius, Jelena and Taylor, Stephen and Hughes, Jim and Sauka-Spengler, Tatjana},
	month = oct,
