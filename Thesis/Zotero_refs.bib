	editor = {Levine, Edward M and Stainier, Didier YR and Harris, William A},
	month = may,
	year = {2023},
	note = {Publisher: eLife Sciences Publications, Ltd},
	keywords = {CRISPR/Cas9, bipolar cells specification, medaka retina, neural retina network, vsx genes, zebrafish retina},
	pages = {e85594},
}

@article{castro-mondragon_jaspar_2022,
