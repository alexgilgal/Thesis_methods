	pmid = {29794240},
	pmcid = {PMC6028257},
	keywords = {Adaptation, Biological, Alaska, Animals, Evolution, Molecular, Gasterosteus aculeatus, Genetic Variation, Genetics, Population, Haplotypes, Selection, Genetic, Sequence Analysis, DNA, Smegmamorpha, contemporary evolution, ecological divergence, population genomics, threespine stickleback},
