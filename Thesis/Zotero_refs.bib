	number = {4},
	urldate = {2023-05-15},
	journal = {PLOS ONE},
	author = {Zhang, Yuqing and Yang, Yifan and Trujillo, Caleb and Zhong, Wenxuan and Leung, Yuk Fai},
	year = {2012},
	note = {Publisher: Public Library of Science},
	keywords = {Cell cycle and cell division, Cell differentiation, Embryonic pattern formation, Immunostaining, In situ hybridization, Photoreceptors, Retina, Zebrafish},
