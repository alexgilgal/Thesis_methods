	journal = {Molecular Cell},
	author = {Hsieh, Tsung Han S. and Cattoglio, Claudia and Slobodyanyuk, Elena and Hansen, Anders S. and Rando, Oliver J. and Tjian, Robert and Darzacq, Xavier},
	month = may,
