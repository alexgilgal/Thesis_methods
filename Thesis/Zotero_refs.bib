	author = {Blin, Maryline and Tine, Eugène and Meister, Lydvina and Elipot, Yannick and Bibliowicz, Jonathan and Espinasa, Luis and Rétaux, Sylvie},
	month = sep,
	year = {2018},
	keywords = {Animals, Behavior, Animal, Cell Death, Cell Proliferation, Characiformes, Neural Stem Cells, Neurogenesis, Olfaction, Olfactory Mucosa, Olfactory Perception, Olfactory sensory neuron, Organ size, Proliferation, Smell},
