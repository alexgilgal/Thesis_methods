	number = {5},
	urldate = {2023-06-05},
	journal = {Nature Genetics},
	author = {Krishnan, Jaya and Seidel, Chris W. and Zhang, Ning and Singh, Narendra Pratap and VanCampen, Jake and Peuß, Robert and Xiong, Shaolei and Kenzior, Alexander and Li, Hua and Conaway, Joan W. and Rohner, Nicolas},
	month = may,
	year = {2022},
